<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/update_msg_two"
        android:layout_width="248dp"
        android:layout_height="74dp"
        android:layout_marginTop="64dp"
        android:text="@string/update_message"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/button"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/update_message_one"
        android:layout_width="197dp"
        android:layout_height="0dp"
        android:layout_marginTop="54dp"
        android:layout_marginBottom="494dp"
        android:text="@string/update_title"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="190dp"
        android:layout_height="162dp"
        android:layout_marginTop="84dp"
        android:src="@drawable/update_icon"
        app:layout_constraintEnd_toEndOf="@+id/update_msg_two"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="@+id/update_msg_two"
        app:layout_constraintTop_toBottomOf="@+id/update_message_one" />

    <Button
        android:id="@+id/button"
        android:layout_width="139dp"
        android:layout_height="0dp"
        android:layout_marginBottom="102dp"
        android:text="@string/download"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_message_one" />

    <TextView
        android:id="@+id/update_message_three"
        android:layout_width="337dp"
        android:layout_height="57dp"
        android:text="@string/update_message_three"
        android:textAlignment="center"
        android:textStyle="normal|italic"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_msg_two" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>